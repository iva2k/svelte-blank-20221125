  "version": "0.2.0",
  "configurations": [
    {
      "command": "pnpm test",
      "name": "Run pnpm test",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm test:debug",
      "name": "Run pnpm test:debug",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm svelte:build:vercel",
      "name": "Run pnpm svelte:build:vercel",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm svelte:build:only",
      "name": "Run pnpm svelte:build:only",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm svelte:build:only-sw",
      "name": "Run pnpm svelte:build:only-sw",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm svelte:build:only-destroy",
      "name": "Run pnpm svelte:build:only-destroy",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost:3000",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost:4173",
      "url": "http://localhost:4173",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
